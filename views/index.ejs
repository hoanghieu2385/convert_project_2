<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoot Records</title>
    <link rel="icon" type="image/x-icon" href="/images/header/logo.png">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
</head>
<body>
    <%- include('./includes/header') %>

    <div class="container">
        <!-- New Releases Section -->
        <h2>NEW RELEASE</h2>
        <div class="carousel" data-flickity='{ "wrapAround": true, "autoPlay": true }'>
            <% newReleases.forEach(product => { %>
                <div class="carousel-cell">
                    <div class="album-item" data-product-id="<%= product._id %>">
                        <a href="/product-detail/<%= product._id %>">
                            <img src="/uploads/<%= product.product_image %>" alt="<%= product.album %>" onerror="this.onerror=null;this.src='/images/placeholder.jpg';">
                        </a>
                        <div class="album-info">
                            <a href="/product-detail/<%= product._id %>">
                                <div class="album-title"><%= product.album %></div>
                                <div class="album-artist">
                                    by <%= product.artist ? product.artist.full_name : 'Unknown Artist' %>
                                </div>
                            </a>
                            <div class="album-price">$<%= product.current_price ? product.current_price.toString() : '0.00' %></div>
                        </div>
                        <button class="add-to-cart-btn" data-product-id="<%= product._id %>">Add to Cart</button>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Bestsellers Section -->
        <h2>BESTSELLERS</h2>
        <div class="carousel" data-flickity='{ "wrapAround": true, "autoPlay": true }'>
            <% bestsellers.forEach(bestseller => { %>
                <div class="carousel-cell">
                    <div class="album-item" data-product-id="<%= bestseller._id %>">
                        <a href="/product-detail/<%= bestseller._id %>">
                            <img src="/uploads/<%= bestseller.product_image %>" alt="<%= bestseller.album %>" onerror="this.onerror=null;this.src='/images/placeholder.jpg';">
                        </a>
                        <div class="album-info">
                            <a href="/product-detail/<%= bestseller._id %>">
                                <div class="album-title"><%= bestseller.album %></div>
                                <div class="album-artist">
                                    by <%= bestseller.artist ? bestseller.artist.full_name : 'Unknown Artist' %>
                                </div>
                            </a>
                            <div class="album-price">$<%= bestseller.current_price ? bestseller.current_price.toString() : '0.00' %></div>
                        </div>
                        <button class="add-to-cart-btn" data-product-id="<%= bestseller._id %>">Add to Cart</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include('./includes/cart.ejs') %>
    <%- include('./includes/footer') %>

    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="../public//js/slide_banner.js"></script>
    <script src="../public/js/product-cart.js"></script>
</body>
</html>